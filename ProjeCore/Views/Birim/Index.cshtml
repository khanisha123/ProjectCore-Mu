@using ProjeCore.Models
@model List<Birim>

@{
    ViewData["Title"] = "Index";
}

<table class="table table-active">
    <tr>
        <th>Id</th>
        <th>Brim</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrimId</td>
            <td>@item.BrimAd</td>
            
            <td>
                <a asp-action="BirimSil" asp-route-id="@item.BrimId" class="btn btn-danger">Sil</a>

            </td>
            <td>
                <a asp-controller="Birim" asp-action="BirimGetir" asp-route-id="@item.BrimId" class="btn btn-success">Güncelle</a>
            </td>
            <td><a asp-controller="Birim" asp-action="BirimDetaylar" asp-route-id="@item.BrimId" class="btn btn-dark">Detaylar</a></td>


        </tr>
    }
</table>
<a asp-controller="Birim" asp-action="YeniBirim" class="btn btn-primary">Yeni Birim</a>

